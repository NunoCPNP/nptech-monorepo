{
  "$schema": "./node_modules/@garment/workspace/schemas/config.schema.json",
  "presets": {
    "ui-package": {
      "tasks": {
        "clean": {
          "runner": "clean",
          "input": "{{projectDir}}/dist"
        },
        "build": [
          ":clean",
          {
            "runner": "bin",
            "options": {
              "bin": "yarn",
              "args": "run build",
              "stream": true
            }
          }
        ]
      }
    }
  },
  "projects": {
    "portfolio": {
      "path": "projects/portfolio",
      "tasks": {
        "start": [
          "ui-package:build",
          {
            "runner": "next",
            "options": {
              "appPath": "{{projectDir}}",
              "command": "dev"
            }
          }
        ],
        "build": {
          "runner": "next",
          "options": {
            "appPath": "{{projectDir}}",
            "command": "build"
          }
        },
        "test": {
          "runner": "jest",
          "options": {
            "configFile": "{{projectDir}}/jest.config.js"
          }
        },
        "lint": {
          "runner": "eslint",
          "input": "{{projectDir}}/src/**/*.js",
          "output": "{{projectDir}}/src",
          "options": {
            "configFile": ".eslintrc.js",
            "stream": true
          }
        }
      }
    },
    "components": {
      "path": "ui/components",
      "extends": ["ui-package"],
      "tasks": {
        "storybook": {
          "runner": "bin",
          "options": {
            "bin": "yarn",
            "args": "run storybook",
            "stream": true,
            "longRunning": true
          }
        }
      }
    },
    "theme-provider": {
      "path": "ui/theme-provider",
      "extends": ["ui-package"],
      "tasks": {}
    }
  },
  "schematics": []
}
